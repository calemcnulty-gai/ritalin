{
  "name": "ritalin",
  "displayName": "Ritalin for Cursor",
  "description": "Mini-games during AI generation for focus",
  "version": "0.1.0",
  "publisher": "ritalin-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/ritalin.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:ritalin.showDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ritalin.showGame",
        "title": "Ritalin: Show Game"
      },
      {
        "command": "ritalin.hideGame",
        "title": "Ritalin: Hide Game"
      },
      {
        "command": "ritalin.toggleGame",
        "title": "Ritalin: Toggle Game Panel"
      },
      {
        "command": "ritalin.searchGames",
        "title": "Ritalin: Search itch.io Games"
      },
      {
        "command": "ritalin.manageGames",
        "title": "Ritalin: Manage Downloaded Games"
      },
      {
        "command": "ritalin.openSettings",
        "title": "Ritalin: Open Settings"
      },
      {
        "command": "ritalin.preloadGame",
        "title": "Ritalin: Preload Game (Debug)"
      },
      {
        "command": "ritalin.testExternalWindow",
        "title": "Ritalin: Test External Window"
      },
      {
        "command": "ritalin.configureExternalWindow",
        "title": "Ritalin: Configure External Window"
      },
      {
        "command": "ritalin.showDashboard",
        "title": "Ritalin: Show Detection Dashboard"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "ritalin",
          "title": "Ritalin",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "ritalin": [
        {
          "id": "ritalin.gameView",
          "name": "Game",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Ritalin",
      "properties": {
        "ritalin.showResizeTip": {
          "type": "boolean",
          "default": true,
          "description": "Show a one-time tip about resizing the game panel."
        },
        "ritalin.externalWindow.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable the external game window instead of the panel."
        },
        "ritalin.externalWindow.position": {
          "type": "string",
          "default": "bottom-right",
          "enum": [
            "bottom-left",
            "bottom-right",
            "top-left",
            "top-right",
            "center",
            "overlay",
            "custom"
          ],
          "description": "Position of the external game window."
        },
        "ritalin.externalWindow.customX": {
          "type": "number",
          "default": 0,
          "description": "Custom X position for the window."
        },
        "ritalin.externalWindow.customY": {
          "type": "number",
          "default": 0,
          "description": "Custom Y position for the window."
        },
        "ritalin.externalWindow.width": {
          "type": "number",
          "default": 400,
          "description": "Width of the external game window."
        },
        "ritalin.externalWindow.height": {
          "type": "number",
          "default": 300,
          "description": "Height of the external game window."
        },
        "ritalin.externalWindow.monitor": {
          "type": "string",
          "default": "primary",
          "enum": [
            "primary",
            "secondary",
            "auto"
          ],
          "description": "Which monitor to display the window on."
        },
        "ritalin.externalWindow.alwaysOnTop": {
          "type": "boolean",
          "default": true,
          "description": "Keep the game window always on top."
        },
        "ritalin.externalWindow.hideOnBlur": {
          "type": "boolean",
          "default": false,
          "description": "Hide the game window when it loses focus."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "eslint": "^8.26.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
