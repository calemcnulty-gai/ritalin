{
  "name": "ritalin",
  "displayName": "Ritalin for Cursor",
  "description": "Mini-games during AI generation to maintain developer focus",
  "version": "0.1.0",
  "publisher": "ritalin-dev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "cursor",
    "ai",
    "focus",
    "productivity",
    "games"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "panel": [
        {
          "type": "webview",
          "id": "ritalin.gameView",
          "name": "Ritalin Game",
          "icon": "$(game)",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "ritalin.preloadGame",
        "title": "Preload Game (Debug)",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.showGame",
        "title": "Show Game",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.hideGame",
        "title": "Hide Game",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.toggleGame",
        "title": "Toggle Game",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.searchGames",
        "title": "Search itch.io Games",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.manageGames",
        "title": "Manage Downloaded Games",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.openSettings",
        "title": "Open Settings",
        "category": "Ritalin"
      }
    ],
    "keybindings": [
      {
        "command": "ritalin.toggleGame",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      }
    ],
    "configuration": {
      "title": "Ritalin",
      "properties": {
        "ritalin.selectedGame": {
          "type": "string",
          "default": "",
          "description": "ID of the currently selected game"
        },
        "ritalin.showDelay": {
          "type": "number",
          "default": 2000,
          "description": "Delay in milliseconds before showing game"
        },
        "ritalin.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the extension"
        },
        "ritalin.windowWidth": {
          "type": "number",
          "default": 800,
          "description": "Default game window width"
        },
        "ritalin.windowHeight": {
          "type": "number",
          "default": 600,
          "description": "Default game window height"
        },
        "ritalin.autoDownload": {
          "type": "boolean",
          "default": true,
          "description": "Automatically download games after search selection"
        },
        "ritalin.panelPosition": {
          "type": "string",
          "enum": ["editor", "bottom"],
          "default": "bottom",
          "description": "Where to display the game panel (editor: as a tab, bottom: in the bottom panel area)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calemcnulty-gai/ritalin.git"
  },
  "license": "MIT"
} 