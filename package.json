{
  "name": "ritalin",
  "displayName": "Ritalin for Cursor",
  "description": "Mini-games during AI generation to maintain developer focus",
  "version": "0.1.0",
  "publisher": "ritalin-dev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "cursor",
    "ai",
    "focus",
    "productivity",
    "games"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "ritalin",
          "title": "Ritalin",
          "icon": "$(game)"
        }
      ]
    },
    "views": {
      "ritalin": [
        {
          "type": "webview",
          "id": "ritalin.gameView",
          "name": "Game",
          "icon": "$(game)",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "ritalin.preloadGame",
        "title": "Preload Game (Debug)",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.showGame",
        "title": "Show Game",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.hideGame",
        "title": "Hide Game",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.toggleGame",
        "title": "Toggle Game",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.searchGames",
        "title": "Search itch.io Games",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.manageGames",
        "title": "Manage Downloaded Games",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.openSettings",
        "title": "Open Settings",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.testExternalWindow",
        "title": "Test External Game Window",
        "category": "Ritalin"
      },
      {
        "command": "ritalin.configureExternalWindow",
        "title": "Configure External Window",
        "category": "Ritalin"
      }
    ],
    "keybindings": [
      {
        "command": "ritalin.toggleGame",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      }
    ],
    "configuration": {
      "title": "Ritalin",
      "properties": {
        "ritalin.selectedGame": {
          "type": "string",
          "default": "",
          "description": "ID of the currently selected game"
        },
        "ritalin.showDelay": {
          "type": "number",
          "default": 2000,
          "description": "Delay in milliseconds before showing game"
        },
        "ritalin.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the extension"
        },
        "ritalin.autoDownload": {
          "type": "boolean",
          "default": true,
          "description": "Automatically download games after search selection"
        },
        "ritalin.showResizeTip": {
          "type": "boolean",
          "default": true,
          "description": "Show tip about resizing the panel when opening games"
        },
        "ritalin.externalWindow.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Use external floating window instead of panel"
        },
        "ritalin.externalWindow.position": {
          "type": "string",
          "enum": ["bottom-left", "bottom-right", "top-left", "top-right", "center", "custom"],
          "default": "bottom-right",
          "description": "Position of the external game window"
        },
        "ritalin.externalWindow.customX": {
          "type": "number",
          "default": 0,
          "description": "Custom X position (only used when position is 'custom')"
        },
        "ritalin.externalWindow.customY": {
          "type": "number",
          "default": 0,
          "description": "Custom Y position (only used when position is 'custom')"
        },
        "ritalin.externalWindow.width": {
          "type": "number",
          "default": 400,
          "minimum": 200,
          "maximum": 1200,
          "description": "Width of the external game window"
        },
        "ritalin.externalWindow.height": {
          "type": "number",
          "default": 300,
          "minimum": 150,
          "maximum": 800,
          "description": "Height of the external game window"
        },
        "ritalin.externalWindow.monitor": {
          "type": "string",
          "enum": ["primary", "secondary", "auto"],
          "default": "primary",
          "description": "Which monitor to place the window on"
        },
        "ritalin.externalWindow.alwaysOnTop": {
          "type": "boolean",
          "default": true,
          "description": "Keep the external window always on top"
        },
        "ritalin.externalWindow.hideOnBlur": {
          "type": "boolean",
          "default": false,
          "description": "Hide window when it loses focus"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "dependencies": {
    "electron": "^27.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calemcnulty-gai/ritalin.git"
  },
  "license": "MIT"
} 